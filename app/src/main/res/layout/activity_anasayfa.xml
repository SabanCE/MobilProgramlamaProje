<?xml version="1.0" encoding="utf-8"?><!-- Ana Kapsayıcı: Dikey LinearLayout -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".AnasayfaActivity">

    <!-- Arama Bölümü - androidx versiyonu ile güncellendi -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:queryHint="Bildirimlerde ara..."
        android:background="@drawable/edit_text_background" />

    <!-- Filtreler Başlığı -->
    <TextView
        android:id="@+id/filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Filtreler:"
        android:textStyle="bold" />

    <!-- Filtre Chipleri -->
    <HorizontalScrollView
        android:id="@+id/filter_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/status_filter_chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_tum_u"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tümü"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true"
                android:checked="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_tur_filter"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true"
                android:checked="true"
                android:text="Tüm Türler" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_acik"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true"
                android:text="Açık" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_takip_ettiklerim"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true"
                android:text="Takip Ettiklerim" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Bildirim Listesi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notifications_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:listitem="@layout/item_notification" />

    <!-- Alt Navigasyon Çubuğu -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        app:itemTextColor="#333333"
        app:itemIconTint="#555555"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>