<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".AdminPanelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:orientation="vertical">

        <!-- Modül Seçici (Sekmeler) -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/admin_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yönetim" />
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acil Durum Yayınla" />
        </com.google.android.material.tabs.TabLayout>

        <!-- Yönetim Modülü -->
        <LinearLayout
            android:id="@+id/layout_yonetim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/edit_text_background"
                android:queryHint="Bildirimlerde ara..." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Filtreler:"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/status_filter_chip_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_tum_u"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:checked="true"
                        android:text="Tümü"
                        app:chipBackgroundColor="@color/chip_background_color" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_tur_filter"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Tüm Türler"
                        app:chipBackgroundColor="@color/chip_background_color" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_acik"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Açık"
                        app:chipBackgroundColor="@color/chip_background_color" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_takip_ettiklerim"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Takip Ettiklerim"
                        app:chipBackgroundColor="@color/chip_background_color" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_olusturdugum"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Oluşturduğum Bildirimler"
                        app:chipBackgroundColor="@color/chip_background_color" />

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/admin_notifications_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp" />
        </LinearLayout>

        <!-- Acil Durum Yayınlama Modülü -->
        <ScrollView
            android:id="@+id/layout_acil_yayinla"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acil Durum Bildirimi"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/et_acil_aciklama"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edit_text_background"
                    android:gravity="top"
                    android:hint="Açıklama"
                    android:inputType="textMultiLine"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/btn_acil_konum_cihaz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_background"
                    android:text="Cihaz Konumunu Al" />

                <Button
                    android:id="@+id/btn_acil_konum_harita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_background"
                    android:text="Haritadan Konum Seç" />

                <Button
                    android:id="@+id/btn_acil_foto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_background"
                    android:text="Fotoğraf Ekle" />

                <FrameLayout
                    android:id="@+id/fl_acil_foto_container"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/iv_acil_onizleme"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                    <ImageButton
                        android:id="@+id/btn_acil_foto_kaldir"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top|end"
                        android:background="@android:drawable/ic_delete" />
                </FrameLayout>

                <ProgressBar
                    android:id="@+id/acil_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_acil_yayinla"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/edit_text_background"
                    android:text="ACİL DURUMU YAYINLA"
                    android:textColor="#FF0000"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_background"
        app:itemIconTint="#555555"
        app:itemTextColor="#333333"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>