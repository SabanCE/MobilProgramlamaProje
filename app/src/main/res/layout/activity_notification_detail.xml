<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".NotificationDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Başlık -->
        <TextView
            android:id="@+id/detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bildirim Başlığı"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tür ve Durum Chipleri -->
        <com.google.android.material.chip.Chip
            android:id="@+id/detail_chip_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Güvenlik"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/detail_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Sadece normal kullanıcılar için görünen durum çipi -->
        <com.google.android.material.chip.Chip
            android:id="@+id/detail_chip_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Açık"
            app:layout_constraintTop_toTopOf="@id/detail_chip_type"
            app:layout_constraintStart_toEndOf="@id/detail_chip_type"
            android:layout_marginStart="8dp"/>
            
        <!-- Sadece Admin için görünen durum güncelleme bölümü -->
        <LinearLayout
            android:id="@+id/admin_status_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone" 
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/detail_chip_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durumu Güncelle:" 
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/status_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Açıklama -->
        <TextView
            android:id="@+id/detail_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bildirimin tam ve detaylı açıklaması burada yer alacak."
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/admin_status_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Zaman ve Kullanıcı Bilgisi -->
        <TextView
            android:id="@+id/detail_info_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="5 saat önce Ahmet Yılmaz tarafından oluşturuldu"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/detail_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- YENİ EKLENEN ImageView -->
        <ImageView
            android:id="@+id/detail_image_view"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:src="@tools:sample/backgrounds/scenic"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/detail_info_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
            
        <!-- Takip Etme Butonu -->
        <Button
            android:id="@+id/button_follow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Takip Et"
            android:background="@drawable/edit_text_background"
            app:layout_constraintTop_toBottomOf="@id/detail_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Harita Görünümü -->
        <androidx.cardview.widget.CardView
            android:id="@+id/detail_map_card"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/button_follow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.gms.maps.MapView
                android:id="@+id/detail_map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>