<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Üst Satır: İkon, Başlık ve Zaman -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" 
            android:orientation="horizontal">

            <!-- Tür İkonu  -->
            <ImageView
                android:id="@+id/icon_notification_type"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                tools:src="@android:drawable/ic_dialog_alert" />

            <!-- Başlık -->
            <TextView
                android:id="@+id/text_notification_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Bildirim Başlığı" />

            <!-- Zaman Bilgisi (Oluşturulma Zamanı) -->
            <TextView
                android:id="@+id/text_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                tools:text="1 saat önce" />

        </LinearLayout>

        <!-- Açıklama Metni -->
        <TextView
            android:id="@+id/text_notification_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14sp"
            tools:text="Bu kısımda bildirimin açıklaması yer alacak. Birkaç satır olabilir." />

        <!-- Alt Satır: Durum Bilgisi (Açık/İnceleniyor/Çözüldü) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/chip_notification_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#808080"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Açık" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>